{
  "name": "knowyourmeme-api-wrapper",
  "version": "0.0.1",
  "author": "Daniel Sogl",
  "description": "A simple knowyourmeme api wrapper written in TypeScript",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielsogl/knowyourmeme-api-wrapper.git"
  },
  "main": "./dist/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm run serve",
    "build": "npm run clean && npm run build-ts && npm run tslint",
    "clean": "rimraf -rf dist && mkdir dist",
    "serve": "node ./dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "docker:run": "docker run -d -p 8080:8080 knowyourmeme-api-wrapper",
    "docker:build": "docker build -t knowyourmeme-api-wrapper ."
  },
  "engines": {
    "node": "latest"
  },
  "dependencies": {
    "apicache": "^1.5.3",
    "axios": "^0.19.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsdom": "^16.2.2",
    "pjson": "^1.0.9",
    "redis": "^3.0.2",
    "sanitize-html": "^1.26.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/apicache": "^1.2.2",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/jest": "^25.2.3",
    "@types/jsdom": "^16.2.3",
    "@types/node": "^12.12.44",
    "@types/redis": "^2.8.22",
    "@types/sanitize-html": "^1.23.0",
    "@types/supertest": "^2.0.9",
    "concurrently": "^5.2.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  }
}
